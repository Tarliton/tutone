	vars := map[string]interface{}{
  {{- range .QueryVars}}
    "{{.Key}}": {{.Value | untitle}},
  {{- end}}
	}

	if err := a.client.NerdGraphQuery({{.Name}}Mutation, vars, &resp); err != nil {
		return nil, err
	}

	return &resp.{{first .Signature.Return}}, nil
}

