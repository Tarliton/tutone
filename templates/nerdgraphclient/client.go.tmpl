	mutation {{.Name|title}}(
  {{- range .QueryVars}}
      ${{.Key}}: {{.Type}}!
  {{- end}}
  ){
		{{.Name}}(
  {{- range .QueryVars}}
      {{.Key}}: ${{.Value | untitle}},
  {{- end}}
    )
{{ .QueryString}} }
`

